	<include name="Sort_Letter">
		<control type="group">
			<left>0</left>
			<top>0</top>
			<width>214</width>
			<height>214</height>
			<visible>Container.Scrolling</visible>
			<animation type="Visible" reversible="false">
				<effect type="zoom" start="10" end="100" center="auto" time="100" tween="elastic" easing="out"/>
				<effect type="fade" start="0" end="100" time="100" tween="sine" easing="out"/>
			</animation>
			<animation type="Hidden" reversible="false">
				<effect type="zoom" start="100" end="10" center="auto" time="300" tween="back" easing="in"/>
				<effect type="fade" start="100" end="0" time="300" tween="sine" easing="in"/>
			</animation>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>214</width>
				<height>214</height>
				<texture>dialogs\dialog_sort_letter.png</texture>
			</control>
			<control type="label">
				<left>0</left>
				<top>0</top>
				<width>214</width>
				<height>214</height>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[ListItem.SortLetter]</label>
				<textcolor>Text</textcolor>
				<font>Selected_Item</font>
			</control>
		</control>
	</include>
	<variable name="VideoHWDecoderVar">
		<value condition="Player.Process(videohwdecoder)">$LOCALIZE[19074]</value>
		<value>$LOCALIZE[50168]</value>
	</variable>
	<variable name="MusicInfoThumbVar">
		<value condition="!String.IsEmpty(Listitem.Art(thumb))">$INFO[Listitem.Art(thumb)]</value>
		<value condition="String.IsEqual(listitem.dbtype,artist)">DefaultArtist.png</value>
		<value condition="String.IsEqual(listitem.dbtype,album)">DefaultAlbumCover.png</value>
		<value>DefaultAudio.png</value>
	</variable>
		<variable name="Durat_hh">
		<value condition="Integer.IsGreaterOrEqual(ListItem.Duration(h),1) + String.Contains(System.Language,russian)">$INFO[ListItem.Duration(h)] [LOWERCASE]$LOCALIZE[12392][/LOWERCASE]</value>
		<value condition="Integer.IsGreaterOrEqual(ListItem.Duration(h),1)">$INFO[ListItem.Duration(h)] h</value>
	</variable>
	<variable name="Durat_mm">
		<value condition="Integer.IsGreaterOrEqual(ListItem.Duration(m),1)">$INFO[ListItem.Duration(m)] [LOWERCASE]$LOCALIZE[12391][/LOWERCASE]</value>
		<value/>
	</variable>
	<variable name="ItemDuration">
		<value condition="Container.Content(songs)">$INFO[ListItem.Duration]</value>
		<value condition="Integer.IsLess(ListItem.Duration,3600)">$INFO[ListItem.Duration(m),,[LOWERCASE] $LOCALIZE[12391][/LOWERCASE]]</value>
